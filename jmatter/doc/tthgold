#!/bin/sh

# steps:

lyx --export latex guide.lyx
tthprep guide.tex
tth -s -e2 -w4 -Lguide < guide.tex | tthsplit 
mkdir webdoc
mv *.html webdoc
rm figures/*.eps
cp -R figures webdoc/
rm -rf webdoc/figures/.svn


