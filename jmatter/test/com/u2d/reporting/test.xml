     <property name="org.jfree.report.modules.gui.base.PreferredWidth">640</property>
     <property name="org.jfree.report.modules.gui.base.PreferredHeight">480</property>
  </configuration>

  <pageheader height="200" fontname="sansserif" fontsize="10" fsbold="true">
  
    <label x="0" y="0" 
           width="100%" height="12" 
           fonsize="12" fsbold="true"
           alignment="center"><![CDATA[This is a test]]></label>
           
    <line x1="170" y1="50" x2="334" y2="50" weight="0.75" />
  
  </pageheader>

  <reportheader height="50" fontname="sansserif" fontsize="10" fsbold="true">
    <label x="110" y="30" width="150" height="12" alignment="left">Title</label>
    <line x1="270" y1="45" x2="320" y2="45" weight="0.5" />
  </reportheader>

  <items height="18"
         fontname="sansserif" fontstyle="plain" fontsize="10" fsbold="false"
         vertical-alignment="middle">

    <string-field x="270" y="0" width="50" height="12" alignment="right" 
       fieldname="unit-charge" />

  </items>

  <reportfooter height="100" fontname="sansserif" fontsize="10" vertical-alignment="middle">
    <label x="270" y="20" width="100" height="12" alignment="right" fsbold="true">Test</label>
  </reportfooter>

</report>

