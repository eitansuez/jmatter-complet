<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE binding SYSTEM "binding.dtd">
<binding>

  <format type="com.u2d.type.atom.StringEO" 
     serializer="com.u2d.xml.XMLPropertyAdapter.serialize"
     deserializer="com.u2d.xml.XMLPropertyAdapter.deserializeString" />

  <format type="com.u2d.type.atom.BooleanEO"
     serializer="com.u2d.xml.XMLPropertyAdapter.serialize"
     deserializer="com.u2d.xml.XMLPropertyAdapter.deserializeBoolean" />

  <format type="com.u2d.type.atom.TextEO" 
     serializer="com.u2d.xml.XMLPropertyAdapter.serialize"
     deserializer="com.u2d.xml.XMLPropertyAdapter.deserializeText" />

  <format type="com.u2d.type.atom.USZipCode" 
     serializer="com.u2d.xml.XMLPropertyAdapter.serialize"
     deserializer="com.u2d.xml.XMLPropertyAdapter.deserializeUSZipCode" />

  <format type="com.u2d.type.atom.USPhone" 
     serializer="com.u2d.xml.XMLPropertyAdapter.serialize"
     deserializer="com.u2d.xml.XMLPropertyAdapter.deserializeUSPhone" />

  <format type="com.u2d.type.atom.Email" 
     serializer="com.u2d.xml.XMLPropertyAdapter.serialize"
     deserializer="com.u2d.xml.XMLPropertyAdapter.deserializeEmail" />

  <format type="com.u2d.type.atom.URI" 
     serializer="com.u2d.xml.XMLPropertyAdapter.serialize"
     deserializer="com.u2d.xml.XMLPropertyAdapter.deserializeURI" />

  <format type="com.u2d.type.atom.USDollar" 
     serializer="com.u2d.xml.XMLPropertyAdapter.serialize"
     deserializer="com.u2d.xml.XMLPropertyAdapter.deserializeUSDollar" />


  <format type="java.lang.Class"
          serializer="com.u2d.xml.Serializers.serializeClass" 
          deserializer="com.u2d.xml.Serializers.deserializeClass" />
  <format type="com.u2d.model.ComplexType"
          serializer="com.u2d.xml.Serializers.serializeComplexType"
          deserializer="com.u2d.xml.Serializers.deserializeComplexType" />
   
  <mapping name="type" class="com.u2d.model.ComplexType" 
           marshaller="com.u2d.xml.ComplexTypeMarshaller"
           unmarshaller="com.u2d.xml.ComplexTypeMarshaller" />

  <mapping name="folder" class="com.u2d.type.composite.Folder">
    <value name="name" field="_name" />
    <collection name="items" field="_items" 
      add-method="jibxAdd" iter-method="jibxIterator" />
  </mapping>
  
  <mapping name="usaddress" class="com.u2d.type.composite.USAddress">
    <value name="addressLine1" field="_addressLine1" />
    <value name="addressLine2" field="_addressLine2" />
    <value name="city" field="_city" />
    <structure field="_stateCode" />
    <value name="zipCode" field="_zipCode" />
  </mapping>
  
  <mapping name="businesscontact" class="com.u2d.type.composite.BusinessContact">
    <value name="phone" field="_phone" />
    <value name="fax" field="_fax" />
    <value name="email" field="_email" />
    <structure field="_address" />
    <value name="contactName" field="_contactName" />
    <value name="url" field="_url" />
  </mapping>
  
  <mapping name="business" class="com.u2d.type.composite.Business">
    <value name="name" field="_name" />
    <structure field="_contact" />
  </mapping>
    
  <mapping name="us-state" class="com.u2d.type.USState">
    <value name="code" field="_code" style="attribute" />
    <value name="caption" field="_caption" style="attribute" />
  </mapping>

  <mapping name="contact-method" class="com.u2d.type.composite.ContactMethod">
    <value name="code" field="_code" style="attribute" />
    <value name="caption" field="_caption" style="attribute" />
  </mapping>

  <mapping name="code-items" class="com.u2d.xml.CodesList">
    <collection field="_items" />
  </mapping>

  <mapping name="sex" class="com.u2d.type.Sex">
    <value name="code" field="_code" style="attribute" />
    <value name="caption" field="_caption" style="attribute" />
  </mapping>
  <mapping name="marrital-status" class="com.u2d.type.MarritalStatus">
    <value name="code" field="_code" style="attribute" />
    <value name="caption" field="_caption" style="attribute" />
  </mapping>

</binding>
